<div class="container">
  <div class="row">
    <div class="col-12">
      <h3>肌タイプ編集</h3>
      <div class="row">
        <div class="item" style="margin-top: 30px; font-size:15px;">肌タイプ名</div>
        <%= form_with model: @skin_type,url:admin_skin_type_path(@skin_type.id) do |f| %>
          <div class="item" style="margin-top: 30px; margin-left: 10px; font-size:15px;"><%= f.text_field :type_name %></div>
          <div class="item" style="margin-top: 10px; margin-left: 120px;"><%= f.submit '保存', class:"btn btn-primary" %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>