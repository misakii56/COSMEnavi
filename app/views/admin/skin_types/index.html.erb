
      
      <div class="container">
  <div class="row">
    <div class="col-6">
    <div class="badge badge-light">肌タイプ一覧・追加</div>
<div class="d-flex justify-content-around">
<%= form_with model: @skin_type,url:admin_skin_types_path do |f| %>
<%= f.text_field :type_name %>
<%= f.submit '新規登録', class:"btn btn-primary" %>
</div>
<% end %>
<table class="table">
  <thead class="thead-light">
    <tr>
        <th>肌タイプ</th>
    </tr>
  </thead>
  <tbody>
      <% @skin_types.each do |skin_type| %>
      <tr>
          <td><%= skin_type.type_name %></td>
          <td><%= link_to "編集する", edit_admin_skin_type_path(skin_type.id), class:"btn btn-primary" %></td>
      </tr>
      <% end %>
  </tbody>
  </table>
</div>
</div>
</div>