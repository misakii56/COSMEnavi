<div class="container">
  <div class="row">
    <div class="col-6">
      <h3>肌タイプ一覧・追加</h3>
      <%= form_with model: @skin_type,url:admin_skin_types_path do |f| %>
        <div class="row">
          <div class="item" style="margin-top: 30px; margin-left: 50px; font-size:15px;"><%= f.text_field :type_name %></div>
          <div class="item" style="margin-top: 30px; margin-left: 10px"><%= f.submit '登録', class:"btn btn-primary" %></div>
        </div>
      <% end %>
      <table class="table" style="margin-top: 50px;">
        <thead class="thead-light">
          <tr>
            <th>肌タイプ</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @skin_types.each do |skin_type| %>
            <tr>
              <td><%= skin_type.type_name %></td>
              <td><%= link_to "編集", edit_admin_skin_type_path(skin_type.id), class:"btn btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>