<div class="container">
  <div class="row">
    <div class="col-10">
      <h3>化粧品一覧</h3>
    </div>
    <div class="col-2">
      <%= link_to "化粧品登録", new_admin_cosmetic_path, class:"btn btn-dark" %>
    </div>
    <table class="table" style="margin-top: 20px;">
      <thead>
        <tr>
          <th scope="col">化粧品ID</th>
          <th></th>
          <th scope="col">化粧品名</th>
          <th scope="col">カラー</th>
          <th scope="col">ブランド</th>
        </tr>
      </thead>
      <tbody>
        <% @cosmetics.each do |cosmetic| %>
          <tr>
            <td><%= cosmetic.id %></td>
            <td>
            　<%= link_to admin_cosmetic_path(cosmetic.id) do %>
                <% if cosmetic.image.attached? %>
                  <%= image_tag cosmetic.image, size: "50x50" %>
                <% else %>
                  <%= image_tag asset_path('default-image.jpg'), size: "50x50" %>
                <% end %>
              <% end %>
            </td>
            <td><%= cosmetic.name %></td>
            <td><%= cosmetic.color %></td>
            <td><%= cosmetic.brand %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="d-flex justify-content-center">
  <%= paginate @cosmetics %>
</div>