<h4>ログイン</h4>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="item" style="margin-top: 20px; font-size: 15px;"><%= f.label :email, "メールアドレス" %></div>
  <div class="item"style="font-size: 15px;"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>

  <div class="item"style="margin-top: 20px; font-size: 15px;"><%= f.label :password, "パスワード" %></div>
  <div class="item"style="font-size: 15px;"><%= f.password_field :password, autocomplete: "current-password" %></div>

  <div class="item">
    <% if devise_mapping.rememberable? %>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    <% end %>
  </div>
  
  <div class="item" style="margin-top: 20px; font-s">
    <%= f.submit "ログイン", class:"btn btn-primary" %>
  </div>
<% end %>

<%= render "admin/shared/links" %>