<div class="container">
  <h3><%= @user.nickname %>さんの会員詳細</h3>
  <div class="row">
    <div class="col-2">
      <div class="item" style="margin-top: 30px; font-size: 15px;">会員ID</div>
      <div class="item" style="margin-top: 10px; font-size: 15px;">ニックネーム</div>
      <div class="item" style="margin-top: 10px; font-size: 15px;">生年月日</div>
      <div class="item" style="margin-top: 10px; font-size: 15px;">肌タイプ</div>
      <div class="item" style="margin-top: 10px; font-size: 15px;">パーソナルカラー</div>
      <div class="item" style="margin-top: 10px; font-size: 15px;">メールアドレス</div>
      <div class="item" style="margin-top: 10px; font-size: 15px;">会員ステータス</div>
    </div>
    <div class="col-3">
      <div class="item" style="margin-top: 30px; font-size: 15px;"><%= @user.id %></div>
      <div class="item" style="margin-top: 10px; font-size: 15px;"><%= @user.nickname %></div>
      <div class="item" style="margin-top: 10px; font-size: 15px;"><%= @user.birth_date.strftime('%Y年%m月%d日') %></div>
      <div class="item" style="margin-top: 10px; font-size: 15px;"><%= @skin_type.type_name %></div>
      <div class="item" style="margin-top: 10px; font-size: 15px;"><%= @parsonal_color.color_name %></div>
      <div class="item" style="margin-top: 10px; font-size: 15px;"><%= @user.email %></div>
      <div class="item" style="margin-top: 10px; font-size: 15px;">
        <% if @user.is_deleted %>
          <span style="color: #808080;">退会済</span>
        <% else %>
          <span style="color: blue;">有効</span>
        <% end %>
      </div>
      <div class="item" style="margin-top: 10px;"><%= link_to "編集する", edit_admin_user_path(@user.id), class:"btn btn-primary" %></div>
    </div>
  </div>
</div>