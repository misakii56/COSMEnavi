
<div class="container">
  <div class="badge badge-light"><%= @user.nickname %>さんの会員詳細</div>
  <div class="row">
    <div class="col-md-4">
      <div>会員ID</div>
      <div>ニックネーム</div>
      <div>生年月日</div>
      <div>肌タイプ</div>
      <div>パーソナルカラー</div>
      <div>メールアドレス</div>
      <div>会員ステータス</div>
    </div>
    <div class="col-md-6">
      <div><%= @user.id %></div>
      <div><%= @user.nickname %></div>
      <div><%= @user.birth_date.strftime('%Y年%m月%d日') %></div>
      <div><%= @skin_type.type_name %></div>
      <div><%= @parsonal_color.color_name %></div>
      <div><%= @user.email %></div>
      <div><% if @user.is_deleted %>
                 <span style="color: #808080;">退会済</span>
                <% else %>
                 <span style="color: blue;">有効</span>
                <% end %></div>

      </div>
      </div>
      <div><%= link_to "編集する", edit_admin_user_path(@user.id), class:"btn btn-primary" %></div>
      </div>
