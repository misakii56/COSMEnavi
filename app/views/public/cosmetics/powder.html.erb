<div class="container">
  <h4>パウダー</h4>
  <div class="row">
    <% @powder.each do |po| %>
      <div class="col-6 col-sm-4 col-md-3">
        <div class="item">
          <%= link_to cosmetic_path(po.id) do %>
            <% if po.image.attached? %>
              <%= image_tag po.image, size: "130x130" %>
            <% else %>
              <%= image_tag 'no_image', size: "130x130" %>
            <% end %>
          <% end %>
        </div>
        <div class="item"><%= po.brand %></div>
        <div class="item"><%= po.name %></div>
        <div class="item"><%= po.color %></div>
      </div>
    <% end %>
  </div>
  <div class="d-flex justify-content-center">
    <%= paginate @cosmetics %>
  </div>
</div>
