<div class="container">
  <h4>アイライナー</h4>
  <div class="row">
    <% @eyeliner.each do |e| %>
      <div class="col-6 col-sm-4 col-md-3">
        <div class="item">
          <%= link_to cosmetic_path(e.id) do %>
            <% if e.image.attached? %>
              <%= image_tag e.image, size: "130x130" %>
            <% else %>
              <%= image_tag 'no_image', size: "130x130" %>
            <% end %>
          <% end %>
        </div>
        <div class="item"><%= e.brand %></div>
        <div class="item"><%= e.name %></div>
        <div class="item"><%= e.color %></div>
      </div>
    <% end %>
  </div>
  <div class="d-flex justify-content-center">
    <%= paginate @cosmetics %>
  </div>
</div>