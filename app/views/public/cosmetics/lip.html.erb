<div class="container">
  <h4>リップ</h4>
  <div class="row">
    <% @lip.each do |l| %>
      <div class="col-6 col-sm-4 col-md-3">
        <div class="item">
          <%= link_to cosmetic_path(l.id) do %>
            <% if l.image.attached? %>
              <%= image_tag l.image, size: "130x130" %>
            <% else %>
              <%= image_tag 'no_image', size: "130x130" %>
            <% end %>
          <% end %>
        </div>
        <div class="item"><%= l.name %></div>
        <div class="item"><%= l.brand %></div>
        <div class="item"><%= l.color %></div>
      </div>
    <% end %>
  </div>
  <div class="d-flex justify-content-center">
    <%= paginate @cosmetics %>
  </div>
</div>