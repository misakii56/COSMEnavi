<div class="container">
      <div class="badge badge-light">化粧品</div>
  <div class="row">
    
    <div class="col-12">
<div class="text-center">
          <% @cosmetics.each do |cosmetic| %>
          　<%= link_to cosmetic_path(cosmetic.id) do %>
            <% if cosmetic.image.attached? %>
            <%= image_tag cosmetic.image, size: "130x130" %>
          <% else %>
            <%= image_tag 'no_image', size: "130x130" %>
            <% end %>
            <% end %>
          <td><%= cosmetic.name %></td>
          <td><%= cosmetic.color %></td>
          <td><%= cosmetic.brand %></td>
          <% end %>
          </div>
    </div>
    </div>
    </div>
    <div class="d-flex justify-content-center">
    <%= paginate @cosmetics %>
    </div>