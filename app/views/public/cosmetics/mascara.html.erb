<div class="container">
<h2><span>マスカラ</h2></span>
  <% @mascara.each do |m| %>
    <div>
      <%= link_to cosmetic_path(m.id) do %>
          <% if m.image.attached? %>
          <%= image_tag m.image, size: "50x50" %>
          <% else %>
          <%= image_tag 'no_image', size: "50x50" %>
          <% end %>
          <% end %>
      <%= m.name %>
      <%= m.brand %>
      <%= m.color %>
    </div>
  <% end %>
    <div class="d-flex justify-content-center">
   <%= paginate @cosmetics %>
   </div>
</div>