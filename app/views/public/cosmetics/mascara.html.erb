<div class="container">
  <h4>マスカラ</h4>
  <div class="row">
      <% @mascara.each do |m| %>
        <div class="col-6 col-sm-4 col-md-3">
          <div class="item">
            <%= link_to cosmetic_path(m.id) do %>
              <% if m.image.attached? %>
                <%= image_tag m.image, size: "130x130" %>
              <% else %>
                <%= image_tag 'no_image', size: "130x130" %>
              <% end %>
            <% end %>
          </div>
          <div class="item"><%= m.name %></div>
          <div class="item"><%= m.brand %></div>
          <div class="item"><%= m.color %></div>
        </div>
      <% end %>
    </div>
  <div class="d-flex justify-content-center">
    <%= paginate @cosmetics %>
  </div>
</div>