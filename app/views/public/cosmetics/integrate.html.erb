<div class="container">
  <h4>INTEGRATE</h4>
   <div class="row">
    <% @integrate.each do |i| %>
      <div class="col-6 col-sm-4 col-md-3">
        <div class="item">
          <%= link_to cosmetic_path(i.id) do %>
            <% if i.image.attached? %>
              <%= image_tag i.image, size: "130x130" %>
            <% else %>
              <%= image_tag 'no_image', size: "130x130" %>
            <% end %>
          <% end %>
        </div>
        <div class="item"><%= i.brand %></div>
        <div class="item"><%= i.name %></div>
        <div class="item"><%= i.color %></div>
      </div>
    <% end %>
  </div>
  <div class="d-flex justify-content-center">
    <%= paginate @cosmetics %>
  </div>
</div>