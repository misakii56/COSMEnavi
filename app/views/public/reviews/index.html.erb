  <div class="container">
    <div class="row">
      <div class="col-10">
          <h4>検索結果 "<%= @keyword %>"</h4>
              <ul>
                <table class="table">
                  <tbody>
                    <% @cosmetics.each do |cosmetic| %>
                       <tr>
                         <td><%= cosmetic.brand %></td>
                         <td><%= link_to cosmetic.name, cosmetic_path(cosmetic.id) %></td>
                         <td><%= cosmetic.color %></td>
                       </tr>
                      <% end %>
                  </tbody>
                </table>
              </ul>
      </div>
    </div>
  </div>