<div class="container">
  <div class="row">
    <div class="col-12">
      <h4><span>レビューを投稿する</h4></span>
      <%= form_with model: @review, url: cosmetic_reviews_path(@cosmetic.id) do |f| %>
        <div class="item" style="margin-top: 100px; font-size: 15px;">評価</div>
        <div class="item" style="margin-top: 20px;">
          <div id="post_raty"></div>
        </div>
        <div class="item" style="margin-top: 10px; font-size: 15px;">レビュー</div>
        <div class="item" style="margin-top: 20px; font-size: 20px;">
          <%= f.text_area :review %>
        </div>
        <div class="item" style="margin-top: 10px;">
          <%= f.submit '投稿', class:"btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<script>
  var elem = document.getElementById('post_raty');
  var opt = {
      starOn: "<%= asset_path('star-on.png') %>",
      starOff: "<%= asset_path('star-off.png') %>",
      starHalf: "<%= asset_path('star-half.png') %>",
      scoreName: "review[rate]",
    };
  raty(elem,opt);
</script>