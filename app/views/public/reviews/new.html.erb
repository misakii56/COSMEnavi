 <div class="container">
  <div class="row">
    <div class="col-12">
        <div class="badge badge-light">レビューを投稿する</div>
    </div>
  </div>
  <%= form_with model: @review, url: cosmetic_reviews_path(@cosmetic.id) do |f| %>
    <div id="post_raty"></div>
    <%= f.text_area :review %>

    <%= f.submit '投稿', class:"btn btn-primary" %>
    <% end %>
</div>

<script>
  var elem = document.getElementById('post_raty');
  var opt = {
      starOn: "<%= asset_path('star-on.png') %>",
      starOff: "<%= asset_path('star-off.png') %>",
      starHalf: "<%= asset_path('star-half.png') %>",
      scoreName: "review[rate]",
    };
  raty(elem,opt);
</script>